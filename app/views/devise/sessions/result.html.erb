<h2>Find user</h2>

<% if @user == current_user %>
  <div class="field">
    Why did you search yourself?
  </div>
<% elsif @user %>
  <div class="field">
   Add <%= link_to @user.email, follow_path(:followed_id => @user.id) %>
  </div>
<% else %>
  <div class="field">
    User Not Found
  </div>
<% end %>
